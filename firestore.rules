rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserRole(role) {
      // Check if the user document exists and the role matches.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Only admins can create, list, or delete users.
    // Users can read and update their OWN profile.
    match /users/{userId} {
      allow read: if isUserAuthenticated() && (isOwner(userId) || isUserRole('admin'));
      allow update: if isUserAuthenticated() && isOwner(userId);
      allow create, delete: if isUserAuthenticated() && isUserRole('admin');
      
      // Admins can list all users.
      allow list: if isUserAuthenticated() && isUserRole('admin');

      // --- Payments Subcollection (for direct access) ---
      match /payments/{paymentId} {
        allow read: if isUserAuthenticated() && (isOwner(userId) || isUserRole('admin'));
        allow create, update, delete: if isUserAuthenticated() && isUserRole('admin');
      }
    }

    // --- Payments Collection Group (for admin queries) ---
    // This allows admins to query across all 'payments' subcollections at once.
    // This is required for the Admin Dashboard and User Management pages.
    match /{path=**}/payments/{paymentId} {
      allow read: if isUserAuthenticated() && isUserRole('admin');
    }
    
    // --- Expenditures Collection ---
    // Only admins can manage expenditures.
    match /expenditures/{expenditureId} {
        allow read, write, create, delete: if isUserAuthenticated() && isUserRole('admin');
    }

    // --- App Settings Collection ---
    // Admins can manage settings.
    // Authenticated users can read settings (e.g., to get monthly fee).
    match /app_settings/payment {
      allow read: if isUserAuthenticated();
      allow write: if isUserAuthenticated() && isUserRole('admin');
    }
  }
}
